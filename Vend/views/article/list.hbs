<h1>Articles <a class="btn btn-secondary" href="/article"><i class="fa fa-plus"></i>Create New</a></h1> 
<table class="table table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>Model</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.description}} </td>
            <td>{{this.model}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>
                <a  href="/article/see/{{this._id}}"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></a>
                <a  href="/article/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a  href="/article/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this Article?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>


            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

